<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sound_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="@dimen/abc_text_size_title_material" />

        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sound_title"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/loop_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/pri_dark"
                android:minHeight="32dp"
                android:text="@string/create_loop_btn"
                android:textAllCaps="true"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <Button
                android:id="@+id/random_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/pri_dark"
                android:minHeight="32dp"
                android:text="@string/create_random_btn"
                android:textAllCaps="true"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/button_row"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/volume_slider_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/volume_slider_description"
                android:src="@drawable/ic_volume_up_black_24dp" />

            <SeekBar
                android:id="@+id/volume_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="10"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>