<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/create_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:clipToPadding="false"
    android:elevation="2dp"
    card_view:cardBackgroundColor="@color/acc_card_bac_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sound_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/close_btn"
            android:text=""
            android:textColor="@color/txt_light"
            android:textSize="16sp" />

        <ImageButton
            android:id="@id/close_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:minHeight="24dp"
            android:minWidth="24dp"
            android:src="@drawable/ic_clear_24dp" />

        <LinearLayout
            android:id="@+id/button_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sound_title"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/loop_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/bac"
                android:minHeight="32dp"
                android:padding="6dp"
                android:text="@string/create_loop_btn"
                android:textAllCaps="true"
                android:textColor="@color/txt"
                android:textSize="14sp" />

            <Button
                android:id="@+id/random_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/bac"
                android:minHeight="32dp"
                android:padding="6dp"
                android:text="@string/create_random_btn"
                android:textAllCaps="true"
                android:textColor="@color/txt"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/button_row"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/volume_slider_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/volume_slider_description"
                android:src="@drawable/ic_volume_up_white_24dp" />

            <SeekBar
                android:id="@+id/volume_slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:max="10" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
