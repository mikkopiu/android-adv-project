<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sound_library_preview_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:maxWidth="24dp"
            android:minWidth="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <TextView
            android:id="@+id/sound_library_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/sound_library_preview_button"
            android:layout_toLeftOf="@+id/sound_library_fav_button"
            android:layout_toRightOf="@id/sound_library_preview_button"
            android:layout_toStartOf="@+id/sound_library_fav_button"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingBottom="18dp"
            android:paddingTop="16dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/txt"
            android:textSize="16sp" />

        <ImageButton
            android:id="@id/sound_library_fav_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="@string/favorite_btn_description"
            android:maxWidth="24dp"
            android:minWidth="0dp"
            android:padding="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/separator"
        android:visibility="visible" />

</LinearLayout>