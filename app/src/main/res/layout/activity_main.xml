<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac"
    android:orientation="vertical"
    tools:context="fi.metropolia.yellow_spaceship.androidadvproject.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="6dp">

            <android.support.v7.widget.CardView
                android:id="@+id/incontext_create_soundscape"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_card_height"
                android:clickable="true"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/create_soundscape_title"
                    android:scaleType="centerCrop"
                    android:src="@drawable/create_ss" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/main_card_text_bac">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/activity_main_card_title_padding"
                        android:text="@string/create_soundscape_title"
                        android:textColor="@color/txt_light"
                        android:textSize="@dimen/activity_main_card_title_font_size" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_card_height"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:weightSum="2">

                <android.support.v7.widget.CardView
                    android:id="@+id/incontext_sound_library"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/sound_library_title"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sound_l" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/main_card_text_bac">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="@dimen/activity_main_card_title_padding"
                            android:text="@string/sound_library_title"
                            android:textColor="@color/txt_light"
                            android:textSize="@dimen/activity_main_card_title_font_size" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/incontext_your_soundscapes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/your_soundscapes_title"
                        android:scaleType="centerCrop"
                        android:src="@drawable/your_ss" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/main_card_text_bac">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:padding="@dimen/activity_main_card_title_padding"
                            android:text="@string/your_soundscapes_title"
                            android:textColor="@color/txt_light"
                            android:textSize="@dimen/activity_main_card_title_font_size" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/incontext_museum_tour"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_main_card_height"
                android:clickable="true"
                android:elevation="2dp"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/museum_tour_title"
                    android:scaleType="centerCrop"
                    android:src="@drawable/museum" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/main_card_text_bac">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="@dimen/activity_main_card_title_padding"
                        android:text="@string/museum_tour_title"
                        android:textColor="@color/txt_light"
                        android:textSize="@dimen/activity_main_card_title_font_size" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
