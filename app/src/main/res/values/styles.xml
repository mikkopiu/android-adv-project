<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pri</item>
        <item name="colorPrimaryDark">@color/pri_dark</item>
        <item name="colorAccent">@color/acc</item>
        <item name="android:windowBackground">@color/bac</item>
        <item name="android:textColorPrimary">@color/txt</item>

        <item name="colorControlNormal">@color/txt_light</item>
    </style>

    <style name="DarkToolbarStyle" parent="AppTheme">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">@color/txt_light</item>
        <item name="colorPrimary">@color/txt_light</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">@color/txt_light</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">@color/txt_light</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">@color/txt_light</item>
        <!-- Color of the Toolbar -->
        <item name="android:background">@color/pri</item>
    </style>

    <style name="CustomSwitchStyle" parent="AppTheme">
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/volbar_white</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_inactive</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/pri</item>
    </style>

    <style name="DarkButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/btn_dark_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
